<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/driver_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white_radio"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_finish_info_bottom_line"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size"
                android:text="头像"/>
            <com.zz.bluetooth_chat.widget.imageview.MLImageView
                android:id="@+id/iv_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:ml_shape_type="round"
                android:scaleType="fitCenter"
                android:src="@mipmap/pic_default_secret"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/shape_finish_info_bottom_line"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size"
                android:text="昵称"/>
            <com.zz.bluetooth_chat.widget.editview.EditTextDelOrSee
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                app:edtHintText="请输入昵称(10个字以内)"
                app:maxLength="@integer/name_length"
                app:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_finish_info_bottom_line"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size"
                android:text="性别"/>
            <com.zz.bluetooth_chat.widget.MyItemButton
                android:id="@+id/ib_sex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:paddingRight="-15dp"
                app:leftText="男"
                app:leftImage="@mipmap/ico_man"
                app:rightImage="@mipmap/ic_go_to"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size"
                android:text="简介"/>
            <EditText
                android:id="@+id/edt_synopsis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/transparency"
                android:paddingLeft="15dp"
                android:textColorHint="#BFC1CB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:hint="个性签名也很重要哦~"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>