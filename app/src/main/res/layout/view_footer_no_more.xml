<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:id="@+id/fl_footer_container"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_no_more_data_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_no_more_data_height"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/no_more_data"
        android:textColor="@color/footer_no_more_data"
        android:textSize="@dimen/text_no_more_data_size"/>

    <ImageView
        android:id="@+id/iv_load"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_no_more_data_text"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:src="@drawable/frame_loading_grey"/>
</RelativeLayout>